doctype html
html
	head
		title User Login
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
	#body
	block content
		div.container
			div.row
				div.col-sm-6.col-md-4.col-md-offset-4
					h1.text-center.login-title Welcome back! Please sign in below
						div.account-wall
							img(class='profile-img', src='https://cdn2.iconfinder.com/data/icons/website-icons/512/User_Avatar-512.png')
							#message
								if message
							h1.text-center.error-message(style="font-size: 20px;") #{message}
							form(class='form-signin', action='/login', method='POST')
								div.input-group
									span(class="input-group-addon" id="basic-addon1")
										span.glyphicon.glyphicon-user
									input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus aria-describedby="basic-addon1")
								div.input-group
									span(class="input-group-addon" id="basic-addon1")
										span.glyphicon.glyphicon-lock
									input(type='password', name='password' class='form-control', placeholder='Password',required aria-describedby="basic-addon1")
								button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
								span.clearfix
						a(href='/signup', class='text-center new-account') Create a Free Acccount
						a(href='/home', class='text-center new-account') Return Home
